    <properties>
        <property key="name" type="attribute" required="true">
            <caption>Attribute</caption>
            <category>Data source</category>
            <description>The attribute to display</description>
            <attributeTypes>
                <attributeType name="Integer"/>
                <attributeType name="String"/>
            </attributeTypes>
        </property>
        <property key="onChangeEvent" type="enumeration" defaultValue="doNothing">
            <caption>On change event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onchangemf" type="microflow" required="false">
            <caption>On change microflow</caption>
            <category>Events</category>
            <description>The microflow to execute whenever input text changes</description>
            <returnType type="Void"/>
        </property>
        <property key="onChangeNanoflow" type="nanoflow" required="false">
            <caption>On change nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow to execute whenever input text changes</description>
            <returnType type="Void"/>
        </property>
        <property key="onLeaveEvent" type="enumeration" defaultValue="doNothing">
            <caption>On leave event</caption>
            <category>Events</category>
            <description/>
            <enumerationValues>
                <enumerationValue key="doNothing">Do nothing</enumerationValue>
                <enumerationValue key="callMicroflow">Call a microflow</enumerationValue>
                <enumerationValue key="callNanoflow">Call a nanoflow</enumerationValue>
            </enumerationValues>
        </property>
        <property key="onleavemf" type="microflow" required="false">
            <caption>On leave microflow</caption>
            <category>Events</category>
            <description>The microflow to execute on leave</description>
            <returnType type="Void"/>
        </property>
        <property key="onLeaveNanoflow" type="nanoflow" required="false">
            <caption>On leave nanoflow</caption>
            <category>Events</category>
            <description>The nanoflow to execute on leave</description>
            <returnType type="Void"/>
        </property>
        <property key="delay" type="integer" required="true" defaultValue="0">
            <caption>Delay</caption>
            <category>Behavior</category>
            <description>Delay before first on change microflow/nanoflow is triggered in milliseconds</description>
        </property>
        <property key="chartreshold" type="integer" required="true" defaultValue="0">
            <caption>Character threshold</caption>
            <category>Behavior</category>
            <description>Minimum character threshold before the on change microflow/nanoflow is triggered</description>
        </property>
        <property key="showaspassword" type="boolean" defaultValue="false">
            <caption>Show as password</caption>
            <category>General</category>
            <description>Whether to display the inputbox as password field</description>
        </property>
        <property key="placeholder" type="string" required="false">
            <caption>Placeholder text</caption>
            <category>General</category>
            <description>Placeholder for when the inputbox is empty</description>
        </property>
    </properties>
</widget>
